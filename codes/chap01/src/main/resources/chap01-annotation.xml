	<bean id="card2" class="com.springbase.chap01.Card" name="jiluBank">
		<property name="money" value="20000"></property>
	</bean>
	<bean id="dman3" class="com.springbase.chap01.Man">
		<constructor-arg value="有钱的至尊宝"></constructor-arg>
	</bean> 	
</beans>